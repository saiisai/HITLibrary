<resources>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.NoTitleBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="verticalScrollBar">
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarThumbVertical">@drawable/bg_scroller</item>
        <item name="android:scrollbarSize">2dip</item>
        <item name="android:fadingEdge">none</item>
    </style>
	<style name="FadeTransAnimation" parent="android:Animation" mce_bogus="1">          
		<item name="android:windowEnterAnimation">@anim/fade_trans_enter</item>     
		<item name="android:windowExitAnimation">@anim/fade_trans_exit</item>     
	</style>
    
</resources>
